application = {
  window = {
    title = "Butane";
    width  = 1280;
    height = 720;
  };

  graphics = {
    adapter = 0;

    resolution = {
      width  = 1280;
      height = 720;
    };

    fullscreen = false;
    vertical_sync = true;
  };

  win32 = {
    save_directory = "%APPDATA%/Butane/saves";
    time_step_policy = {
      type = "variable";
    };
  };

  boot = {
    package = "boot.package";
    script = "boot.script";
  };
};