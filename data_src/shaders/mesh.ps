#include "shaders/globals.ps.include"

struct PS_INPUT {
  float4 vpos      : VPOS;
  float3 color     : COLOR0;
  float2 tex_coord : TEXCOORD0;
};

struct PS_OUTPUT {
  float4 color : COLOR0;
};

PS_OUTPUT ps_main( PS_INPUT IN )
{
  PS_OUTPUT OUT;
  const float4 diffuse = diffuse_map.Sample(diffuse_sampler, IN.tex_coord);
  OUT.color.rgb = diffuse.rgb * IN.color.rgb;
  OUT.color.a = 1.0;
  return OUT;
}
