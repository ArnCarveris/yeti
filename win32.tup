CC = cl
LD = link
AR = lib
AS = nasm
RC = rc

CFLAGS += /nologo /c /W4 /GF /GL /GR- /I"$(TUP_CWD)\code\include"
CFLAGS += /I"$(TUP_CWD)\deps\foundation\include"
RCFLAGS += /nologo /l 0x0409
RCFLAGS += /I"$(TUP_CWD)\code\include" /I"$(TUP_CWD)\deps\foundation\include"
RCFLAGS += /I"@(WINDOWS_SDK_DIR)Include"
# CFLAGS += /D "WIN32_LEAN_AND_MEAN" /D "NOMINMAX"
LDFLAGS += /NOLOGO /LTCG
CFLAGS += /I"@(WINDOWS_SDK_DIR)Include"
LDFLAGS += /LIBPATH:"@(WINDOWS_SDK_DIR)Lib"

ifeq (@(BUILD),debug)
CFLAGS += /D"BT_DEBUG_BUILD"
RCFLAGS += /D"BT_DEBUG_BUILD"
ASFLAGS += /D"BT_DEBUG_BUILD"
endif

ifeq (@(BUILD),development)
CFLAGS += /D"BT_DEVELOPMENT_BUILD"
RCFLAGS += /D"BT_DEVELOPMENT_BUILD"
ASFLAGS += /D"BT_DEVELOPMENT_BUILD"
endif

ifeq (@(BUILD),release)
CFLAGS += /D"BT_RELEASE_BUILD"
RCFLAGS += /D"BT_RELEASE_BUILD"
ASFLAGS += /D"BT_RELEASE_BUILD"
endif

ifeq (@(TUP_ARCH),i386)
CFLAGS += /arch:SSE2
ASFLAGS += -f win32
LDFLAGS += /MACHINE:X86
endif
ifeq (@(TUP_ARCH),x86_64)
CFLAGS += /arch:SSE2
ASFLAGS += -f win64
LDFLAGS += /MACHINE:X64
endif

CFLAGS += /D "_CRT_SECURE_NO_WARNINGS" /Zi
ifeq (@(BUILD),debug)
CFLAGS += /MDd /D "_DEBUG"
LDFLAGS += /DEBUG
ASFLAGS += -g
RCFLAGS += /D "_DEBUG"
else
CFLAGS += /MD /D "NDEBUG"
RCFLAGS += /D "NDEBUG"
endif

WIN32_LIBS = kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib advapi32.lib shell32.lib ole32.lib oleaut32.lib uuid.lib odbc32.lib odbccp32.lib

!cc = |> $(CC) $(CFLAGS) /Fd"$(TUP_CWD)\%O.pdb" %f /Fo"%o" |>

SHARED_LIB_EXT = .dll
!so = |> $(LD) $(LDFLAGS) /DLL /OUT:"$(TUP_CWD)\%o" %f $(WIN32_LIBS) $(LIBS) |>

ifneq (@(BUILD),release)
SUBSYSTEM = /SUBSYSTEM:CONSOLE /ENTRY:mainCRTStartup
else
SUBSYSTEM = /SUBSYSTEM:WINDOWS /ENTRY:mainCRTStartup
endif

EXE_EXT = .exe
!exe = |> $(LD) $(LDFLAGS) $(SUBSYSTEM) /OUT:"$(TUP_CWD)\%o" %f $(WIN32_LIBS) $(LIBS) |>

LIB_EXT = .lib
!ar = |> $(AR) $(ARFLAGS) /OUT:"$(TUP_CWD)\%o" %f |>
!as = |> $(AS) $(ASFLAGS) -o %o %f |>

!rc = |> $(RC) $(RCFLAGS) /fo %o %f |>